#include <dht.h>
dht DHT;
uint32_t timer = 0;
int sensorPin = A0;
int sensorValue = 0;

void setup (){
  Serial.begin(9600);
}

void loop(){
  
  sensorValue = analogRead(sensorPin);
  Serial.println(sensorValue);
  
  if(millis() - timer>=2000)
  {
    DHT.read11(A1);

    Serial.print(DHT.humidity);
    Serial.println(" %");

    Serial.print(DHT.temperature);
    Serial.println(" Celsius");

    timer = millis();
  }

  if (DHT.temperature > 20) {
   Serial.println("Temperatura maior do que o recomendado");
 }
 
 if (DHT.temperature < 15){
  Serial.println("Temperatura menor do que o recomendado");
 }

 if (DHT.humidity > 95){
  Serial.println("Humidade maior do que o recomendado");
 }

 if (DHT.humidity < 85){
  Serial.println("Humidade menor do que o recomendado");
 }

 if (sensorValue > 2000){
  Serial.println("Luminosidade maior do que o reomendado");
}

if (sensorValue < 1000){
  Serial.println("Luminosidade menor do que o recomendado");
}
  delay(1000);
}
